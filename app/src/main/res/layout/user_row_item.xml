<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="15dp"
        app:cardCornerRadius="7dp"
        app:cardUseCompatPadding="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="11dp">

            <androidx.cardview.widget.CardView
                android:id="@+id/iv_left_line"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:background="@drawable/bg_circle"
                    android:layout_width="wrap_content"
                    android:layout_height="80dp">

                    <ImageView
                        android:id="@+id/iv"
                        android:paddingTop="5dp"
                        android:layout_width="60dp"
                        android:layout_height="55dp"
                        android:contentDescription="Left side line"
                        android:src="@drawable/ic_round_person" />

                    <TextView
                        android:id="@+id/tv_serial_num"
                        android:layout_width="60dp"
                        android:layout_height="20dp"
                        android:layout_below="@+id/iv"
                        android:textAlignment="center"
                        android:textStyle="bold"
                        android:text="100"
                        android:layout_marginBottom="5dp"
                        android:textColor="@color/white" />
                </RelativeLayout>

            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_toEndOf="@+id/iv_left_line"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_user_id"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="100"
                    android:textSize="22sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_user_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Satish"
                    android:textSize="22sp" />

                <TextView
                    android:id="@+id/tv_user_email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="satish555satish@gmail.com"
                    android:textSize="16sp"
                    android:textStyle="bold" />

            </LinearLayout>

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>